<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center bg-dark">
                <div class="card-header">
                    <h3 class="text-white">Sign Up</h3>
                </div>
                <div class="card-body">
                    <img src="https://queautocompro.com/wp-content/uploads/2021/02/fordf150raptor202102.jpg" alt="Logo"
                        class="card-img-top mx-auto m-2 rounded-circle">
                    <form action="/signup" method="POST">
                        <div class="form-group pt-3">
                            <input type="text" class="form-control" name="fullname" placeholder="Full Name" autofocus>
                        </div>
                        <div class="form-group pt-3">
                            <input type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                        <div class="form-group pt-3">
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <div class="form-group pt-3">
                            <button type="submit" class="btn btn-primary form-control">
                                SignUp
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>